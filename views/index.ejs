<!-- Hero Section -->
<section class="hero" style="background-image: url('/images/backgrounds/hockey-arena.jpg');">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title">Hockey Roleplay Hub</h1>
    <div class="hero-subtitle">Create your player, join a team, and hit the ice!</div>
    <a href="/characters/create" class="btn">Create Your Character</a>
  </div>
</section>

<div class="container">
  <!-- Featured Characters -->
  <section>
    <div class="section-header text-center">
      <h2>Featured Characters</h2>
      <p>Meet some of our notable players both on and off the ice</p>
    </div>
    
    <div class="grid grid-3">
      <% if (featuredCharacters && featuredCharacters.length > 0) { %>
        <% featuredCharacters.forEach(function(character) { %>
          <!-- Character Card -->
          <div class="character-card">
            <div class="character-image-container">
              <img src="<%= character.profile_image_url || '/images/placeholders/player1.jpg' %>" alt="<%= character.character_name %>" class="character-image">
              <% if (character.character_team && character.team_logo_url) { %>
                <div class="character-team-badge">
                  <img src="<%= character.team_logo_url %>" alt="<%= character.team_name %>">
                </div>
              <% } %>
            </div>
            <div class="character-info">
              <h3 class="character-name"><%= character.character_name %></h3>
              <div class="character-position"><%= character.character_position %> <% if (character.character_number) { %>| #<%= character.character_number %><% } %></div>
              <div class="character-stats">
                <% if (character.character_position === 'goalie') { %>
                  <div class="stat-item">
                    <div class="stat-label">Saves</div>
                    <div class="stat-value"><%= character.stat_saves || '0' %></div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-label">GAA</div>
                    <div class="stat-value"><%= character.stat_gaa || '0.00' %></div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-label">SO</div>
                    <div class="stat-value"><%= character.stat_shutouts || '0' %></div>
                  </div>
                <% } else { %>
                  <div class="stat-item">
                    <div class="stat-label">Goals</div>
                    <div class="stat-value"><%= character.stat_goals || '0' %></div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-label">Assists</div>
                    <div class="stat-value"><%= character.stat_assists || '0' %></div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-label">Speed</div>
                    <div class="stat-value"><%= character.stat_speed || '75' %></div>
                  </div>
                <% } %>
              </div>
              <div class="character-bio">
                <%= character.character_bio || 'No bio available.' %>
              </div>
              <div class="character-footer">
                <div class="character-status status-<%= character.character_status || 'active' %>"><%= character.character_status || 'Active' %></div>
                <a href="/characters/<%= character.id %>" class="btn btn-outline">View Profile</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center" style="grid-column: span 3;">
          <p>No characters found. Be the first to create one!</p>
          <a href="/characters/create" class="btn">Create Character</a>
        </div>
      <% } %>
    </div>
    
    <div class="text-center" style="margin-top: var(--spacing-lg);">
      <a href="/characters" class="btn">View All Characters</a>
    </div>
  </section>
  
  <!-- Teams Section -->
  <section>
    <div class="section-header text-center">
      <h2>Featured Teams</h2>
      <p>Join an existing team or create your own</p>
    </div>
    
    <div class="grid grid-4">
      <% if (teams && teams.length > 0) { %>
        <% teams.forEach(function(team) { %>
          <!-- Team Card -->
          <div class="card">
            <img src="<%= team.team_logo_url || '/images/placeholders/team1.jpg' %>" alt="<%= team.team_name %>" class="card-image">
            <div class="card-body">
              <h3 class="card-title"><%= team.team_name %></h3>
              <p class="card-text"><%= team.team_description || 'No description available.' %></p>
              <a href="/teams/<%= team.team_code %>" class="btn btn-outline">Team Details</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center" style="grid-column: span 4;">
          <p>No teams found.</p>
        </div>
      <% } %>
    </div>
  </section>
  
  <!-- Recent Scenarios -->
  <section>
    <div class="section-header text-center">
      <h2>Recent Storylines</h2>
      <p>Jump into ongoing storylines or create a new scenario</p>
    </div>
    
    <div class="grid grid-2">
      <% if (scenarios && scenarios.length > 0) { %>
        <% scenarios.forEach(function(scenario) { %>
          <div class="card">
            <div class="card-body">
              <h3 class="card-title"><%= scenario.scenario_title %></h3>
              <p class="card-text"><%= scenario.scenario_description %></p>
              <a href="/scenarios/<%= scenario.id %>" class="btn btn-outline">Join Storyline</a>
            </div>
            <div class="card-footer">
              <div><%= scenario.character_count || 0 %> characters involved</div>
              <div>Started <%= Math.floor(scenario.days_ago) %> days ago</div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center" style="grid-column: span 2;">
          <p>No active storylines found. Start one today!</p>
          <a href="/scenarios/create" class="btn">Create Storyline</a>
        </div>
      <% } %>
    </div>
    
    <div class="text-center" style="margin-top: var(--spacing-lg);">
      <a href="/scenarios" class="btn">View All Storylines</a>
    </div>
  </section>
</div>