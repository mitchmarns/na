<div class="container">
  <div class="section-header text-center">
    <h1>Sign In</h1>
    <p>Welcome back to the Hockey Roleplay Hub</p>
  </div>
  
  <div class="form-container" style="max-width: 500px; margin: 0 auto;">
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-error" style="background-color: rgba(231, 76, 60, 0.3); padding: 10px; border-radius: 4px; margin-bottom: 20px;">
        <% errors.forEach(function(error) { %>
          <p><%= error.msg %></p>
        <% }); %>
      </div>
    <% } %>
    
    <form action="/auth/login" method="POST">
      <input type="hidden" name="redirect" value="<%= redirect %>">
      
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      
      <div class="form-group text-center" style="margin-top: 30px;">
        <button type="submit" class="btn">Sign In</button>
      </div>
      
      <div class="text-center" style="margin-top: 20px;">
        <p>Don't have an account? <a href="/auth/register">Register</a></p>
      </div>
    </form>
  </div>
</div>